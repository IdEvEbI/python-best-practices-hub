{
  "name": "python-best-practices-hub",
  "version": "1.0.0",
  "description": "Python 企业级开发实践指南",
  "private": true,
  "scripts": {
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint:md": "markdownlint '**/*.md' --ignore node_modules --ignore venv --ignore .venv --ignore .git",
    "lint:md:fix": "markdownlint '**/*.md' --fix --ignore node_modules --ignore venv --ignore .venv --ignore .git",
    "setup": "pnpm install",
    "clean": "pnpm store prune"
  },
  "devDependencies": {
    "markdownlint-cli": "^0.35.0",
    "prettier": "^3.0.0",
    "prettier-plugin-zh": "^0.6.0"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
